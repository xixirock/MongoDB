<div id="articles" class="articles-container">
{{#if articles}}

  <div class="article-grid row">
    <div class="article-sizer col s12 m6 xl3"></div><!-- /.article-sizer -->
    {{#each articles}}
      <div class="article-item col s12 m6 xl3" data-id="{{this._id}}">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><a href="{{this.link}}" class="blue-text">{{this.title}}</a></span>
            <a href="{{this.link}}" class="black-text" target="_blank"><i class="material-icons tiny">call_made</i> View Article</a>
          </div><!--/.card-content -->
          <div class="card-action">
            <a href="#" class="orange-text btn-save"><i class="material-icons tiny">save</i> Save Article</a>
          </div><!--/.card-action -->
        </div><!--/.card -->
      </div><!--/.article-item -->
    {{/each}}
  </div><!--/.row -->

{{else}}

  <div class="row">
    <div class="col s12">
      <div class="card-panel text-center">
        <span>There are no Articles</span>
      </div><!--/.card -->
    </div><!--/.article-item -->
  </div><!-- /.row -->

{{/if}}
</div><!-- /.articles-container -->